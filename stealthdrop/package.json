{
  "name": "stealthdrop",
  "version": "1.0.0",
  "description": "A template repository to get started with writing zero knowledge programs with Noir.",
  "scripts": {
    "dev": "yarn deploy && next",
    "build": "yarn compile && yarn deploy && next build",
    "test": "hardhat test",
    "compile": "hardhat compile && cd circuits && nargo compile",
    "deploy": "hardhat compile && hardhat run --network ${NETWORK} scripts/deploy.ts",
    "gen": "hardhat run utils/mt/generateAddresses.ts"
  },
  "dependencies": {
    "@aztec/bb.js": "0.11.0",
    "@noir-lang/backend_barretenberg": "0.18.0",
    "@noir-lang/noir_js": "0.18.0",
    "@noir-lang/types": "0.18.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "1.0.0",
    "@nomicfoundation/hardhat-viem": "1.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.0.3",
    "hardhat": "^2.18.1",
    "hardhat-gas-reporter": "^1.0.8",
    "next": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^9.1.1",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "viem": "1.16.6",
    "wagmi": "^1.4.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.5",
    "@types/react": "^18.0.26",
    "chai": "^4.3.10",
    "ethers": "^5.4.7",
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@3.6.4"
}
